  pod 'Alamofire', '~> 5.4.3'
  
  # 缓存库
  pod 'Cache', '~> 5.0.0'
  
  # 约束库
  pod 'SnapKit', :git => 'https://gitee.com/chuansong16/SnapKit.git', :tag => '4.2.0'
  
  # 进度HUD
  pod 'SVProgressHUD', :git => 'https://gitee.com/chuansong16/SVProgressHUD.git', :tag => '2.2.5'
  
  # 网络图片库
  pod 'Kingfisher', :git => 'git@talkcheap.xiaoeknow.com:AppProjects/ios/component/XEKingfisher.git', :tag => '5.14.0.4'
  
  # 动画
  pod 'lottie-ios', :git => 'https://gitee.com/chuansong16/lottie-ios.git', :tag => '3.1.8'
  

  
  # 网络请求
  pod 'DaisyNet'

  
  #============================== 基础组件 ==================================#
  pod 'BaseUI', :path => 'Lib/BaseUI'
  pod 'NMNetwork', :path => 'Lib/NMNetwork'
#  pod 'NMTools', :path => 'Lib/NMTools'
  pod 'XMHomeUI', :path => 'Lib/XMHomeUI'
  
  pod 'XMUtil', :path => 'Lib/XMUtil'
  
  

  # Pods for XMLY

  target 'XMLYTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'XMLYUITests' do
    # Pods for testing
  end

